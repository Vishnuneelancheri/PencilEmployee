<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollview"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mainproject.vishnu_neelancheri.pencilemployee.new_order.NewOrderActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="9dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"/>
        <EditText
            android:id="@+id/edt_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:inputType="text"
            android:maxLength="10"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mobile number"/>
        <EditText
            android:id="@+id/edt_phone_mobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mobile number"
            android:inputType="number"
            android:maxLength="10"/>


        <RadioGroup
            android:id="@+id/radio_group_portrait_cartoon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radio_portrait"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Portrait" />

            <RadioButton
                android:id="@+id/radio_cartoon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cartoon" />
        </RadioGroup>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimary"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select paper"/>
        <Spinner
            android:id="@+id/spinner_paper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimary"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Frame"/>
        <Spinner
            android:id="@+id/spinner_frame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimary"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Number of faces"/>
        <EditText
            android:id="@+id/edt_num_face"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Number of faces"
            android:inputType="number"
            android:maxLength="2"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Number of copies" />
        <EditText
            android:id="@+id/edt_num_copy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Number of copies"
            android:inputType="number"
            android:maxLength="2"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Courier charge"/>
        <EditText
            android:id="@+id/edt_txt_courier"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="Courier charge"/>
        <CheckBox
            android:id="@+id/check_change_delivery_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change delivery point"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delivery point"/>
        <Spinner
            android:id="@+id/spinner_delivery_point"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimary"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Advance"/>
        <EditText
            android:id="@+id/edt_advance"
            android:hint="Advance"
            android:inputType="number"
            android:maxLength="5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/linear_amount_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Amount:"
                android:layout_marginLeft="20dp"
                android:textSize="18sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/txt_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>
        <Button
            android:id="@+id/btn_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="Submit"
            android:layout_gravity="center"
            android:layout_marginBottom="25dp"/>
    </LinearLayout>
</ScrollView>
